<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/new">Criar novo Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <th><%= user.id %></th>
                    <th><%= user.name %></th>
                    <th>
                        <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/admin/users/delete" style="display: inline" onsubmit="preventDelete(event, this)">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="btn btn-danger">Apagar</button>
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
    function preventDelete(event, form){
        event.preventDefault();
        var decision = confirm("Quer Deletar esse usuário");
        if(decision){
            form.submit();
        }
    }
</script>
